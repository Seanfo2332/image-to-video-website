// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // Hashed password for credentials auth
  image         String?
  role          String    @default("user") // "user" or "admin"
  isActive      Boolean   @default(true)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  lastLoginAt   DateTime?

  credits       Int       @default(10)

  accounts      Account[]
  sessions      Session[]
  submissions   PromptSubmission[]
  videos        Video[]
  images        Image[]
  creditTransactions CreditTransaction[]
  voucherRedemptions VoucherRedemption[]
  topUpOrders        TopUpOrder[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PromptSubmission {
  id            String   @id @default(cuid())
  userId        String
  materialUrl   String
  imageStyle    String
  scriptStyle   String
  language      String?
  voiceId       String
  fileFormat    String?
  videoMaterial String?
  status        String   @default("processing") // queued, processing, completed, failed, cancelled
  progress      Int      @default(0)
  currentStep   String?
  error         String?
  videoUrl      String?  // URL to download completed video
  n8nExecutionId String? // n8n execution ID for stopping workflows
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Video {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  duration    String?
  size        String?
  status      String   @default("processing") // processing, completed, failed
  downloadUrl String?
  thumbnailUrl String?
  submissionId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Image {
  id           String   @id @default(cuid())
  userId       String
  title        String
  prompt       String?
  status       String   @default("processing") // processing, completed, failed
  downloadUrl  String?
  thumbnailUrl String?
  submissionId String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CreditConfig {
  id           String @id @default(cuid())
  workflowType String @unique // "lip-sync", "image", "video"
  cost         Int
  label        String // Display name e.g. "Lip Sync Video"
}

model CreditTransaction {
  id           String   @id @default(cuid())
  userId       String
  amount       Int      // positive = add, negative = deduct
  type         String   // deduction, refund, admin_adjustment, voucher_redemption, signup_bonus
  description  String
  submissionId String?
  voucherId    String?
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Voucher {
  id        String    @id @default(cuid())
  code      String    @unique
  credits   Int
  maxUses   Int       @default(1)
  usedCount Int       @default(0)
  isActive  Boolean   @default(true)
  expiresAt DateTime?
  createdAt DateTime  @default(now())

  redemptions VoucherRedemption[]
}

model VoucherRedemption {
  id           String   @id @default(cuid())
  userId       String
  voucherId    String
  creditsAdded Int
  createdAt    DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  voucher Voucher @relation(fields: [voucherId], references: [id], onDelete: Cascade)

  @@unique([userId, voucherId])
}

model TopUpOrder {
  id               String   @id @default(cuid())
  userId           String
  credits          Int
  amount           Float
  currency         String   @default("USD")
  status           String   @default("pending") // pending, completed, failed, cancelled
  paymentMethod    String?
  paymentReference String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

