// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // Hashed password for credentials auth
  image         String?
  role          String    @default("user") // "user" or "admin"
  isActive      Boolean   @default(true)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  lastLoginAt   DateTime?

  credits       Int       @default(10)

  accounts      Account[]
  sessions      Session[]
  submissions   PromptSubmission[]
  videos        Video[]
  images        Image[]
  creditTransactions CreditTransaction[]
  voucherRedemptions VoucherRedemption[]
  topUpOrders        TopUpOrder[]
  wordPressSites     WordPressSite[]
  geoSubmissions     GeoSubmission[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PromptSubmission {
  id            String   @id @default(cuid())
  userId        String
  materialUrl   String
  imageStyle    String
  scriptStyle   String
  language      String?
  voiceId       String
  fileFormat    String?
  videoMaterial String?
  status        String   @default("processing") // queued, processing, completed, failed, cancelled
  progress      Int      @default(0)
  currentStep   String?
  error         String?
  videoUrl      String?  // URL to download completed video
  n8nExecutionId String? // n8n execution ID for stopping workflows
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Video {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  duration    String?
  size        String?
  status      String   @default("processing") // processing, completed, failed
  downloadUrl String?
  thumbnailUrl String?
  submissionId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Image {
  id           String   @id @default(cuid())
  userId       String
  title        String
  prompt       String?
  status       String   @default("processing") // processing, completed, failed
  downloadUrl  String?
  thumbnailUrl String?
  submissionId String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CreditConfig {
  id           String @id @default(cuid())
  workflowType String @unique // "lip-sync", "image", "video"
  cost         Int
  label        String // Display name e.g. "Lip Sync Video"
}

model CreditTransaction {
  id           String   @id @default(cuid())
  userId       String
  amount       Int      // positive = add, negative = deduct
  type         String   // deduction, refund, admin_adjustment, voucher_redemption, signup_bonus
  description  String
  submissionId String?
  voucherId    String?
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Voucher {
  id        String    @id @default(cuid())
  code      String    @unique
  credits   Int
  maxUses   Int       @default(1)
  usedCount Int       @default(0)
  isActive  Boolean   @default(true)
  expiresAt DateTime?
  createdAt DateTime  @default(now())

  redemptions VoucherRedemption[]
}

model VoucherRedemption {
  id           String   @id @default(cuid())
  userId       String
  voucherId    String
  creditsAdded Int
  createdAt    DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  voucher Voucher @relation(fields: [voucherId], references: [id], onDelete: Cascade)

  @@unique([userId, voucherId])
}

model TopUpOrder {
  id               String   @id @default(cuid())
  userId           String
  credits          Int
  amount           Float
  currency         String   @default("USD")
  status           String   @default("pending") // pending, completed, failed, cancelled
  paymentMethod    String?
  paymentReference String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// SEO Writer Models
model WordPressSite {
  id              String    @id @default(cuid())
  userId          String
  name            String
  url             String
  username        String
  appPassword     String    // WordPress Application Password
  isConnected     Boolean   @default(false)
  lastTestedAt    DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  brandProfile    BrandProfile?
  articles        Article[]
  googleSearchConsole GoogleSearchConsole?
  pageSpeedCache      PageSpeedCache?
  autoPublishSettings AutoPublishSettings?

  @@unique([userId, url])
}

// Google Search Console OAuth tokens
model GoogleSearchConsole {
  id           String   @id @default(cuid())
  siteId       String   @unique
  accessToken  String   @db.Text
  refreshToken String   @db.Text
  expiresAt    DateTime
  propertyUrl  String   // GSC property URL
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  site         WordPressSite @relation(fields: [siteId], references: [id], onDelete: Cascade)
}

// Cache PageSpeed scores
model PageSpeedCache {
  id           String   @id @default(cuid())
  siteId       String   @unique
  score        Int
  loadTime     Float
  contentTime  Float
  pageJump     Boolean  @default(false)
  checkedAt    DateTime @default(now())
  site         WordPressSite @relation(fields: [siteId], references: [id], onDelete: Cascade)
}

// Auto-publish settings per site
model AutoPublishSettings {
  id           String   @id @default(cuid())
  siteId       String   @unique
  enabled      Boolean  @default(true)
  publishTime  String   @default("09:00")
  timezone     String   @default("Asia/Kuala_Lumpur")
  daysAhead    Int      @default(7)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  site         WordPressSite @relation(fields: [siteId], references: [id], onDelete: Cascade)
}

model BrandProfile {
  id               String   @id @default(cuid())
  siteId           String   @unique
  brandName        String
  brandDescription String   @db.Text
  tone             String
  targetAudience   String   @db.Text
  contentStyle     String   @db.Text
  brandVoice       String   @db.Text
  keyThemes        String[] // Array of theme strings
  language         String   @default("English")
  imageStyle       String   @default("photorealistic")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  site             WordPressSite @relation(fields: [siteId], references: [id], onDelete: Cascade)
  keywords         Keyword[]
}

model Keyword {
  id             String   @id @default(cuid())
  profileId      String
  keyword        String
  searchVolume   Int?
  difficulty     Int?
  trafficBoost   Int?     // Estimated monthly traffic boost
  status         String   @default("pending") // pending, scheduled, published, skipped
  createdAt      DateTime @default(now())

  profile        BrandProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  articles       Article[]

  @@unique([profileId, keyword])
}

model Article {
  id              String    @id @default(cuid())
  siteId          String
  keywordId       String?
  title           String
  slug            String
  content         String    @db.Text
  metaDescription String?
  featuredImage   String?   // URL to generated/uploaded image
  wordCount       Int       @default(0)
  articleLength   String    @default("medium") // short, medium, long, guide
  status          String    @default("draft") // draft, scheduled, publishing, published, failed
  wpPostId        String?   // WordPress post ID after publishing
  scheduledFor    DateTime?
  publishedAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  site            WordPressSite @relation(fields: [siteId], references: [id], onDelete: Cascade)
  keyword         Keyword?      @relation(fields: [keywordId], references: [id], onDelete: SetNull)
}

// GEO Content Submissions
model GeoSubmission {
  id              String    @id @default(cuid())
  userId          String
  language        String
  category        String
  businessTitle   String
  businessContent String    @db.Text
  coverImageUrl   String?
  status          String    @default("processing") // processing, completed, failed
  publishedUrls   String[]  // Array of published article URLs
  error           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

